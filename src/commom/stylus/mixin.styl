html, body
  line-height: 1
  font-weight: 200
  font-family: 'PingFang SC','STHeitiSC-Light','Helvetiva-Light',arial,sans-serif

border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    letf: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
      display: none

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ration: 3),(min-device-pixel-ration: 3)
    background-img: url($url + "@3x.png")
